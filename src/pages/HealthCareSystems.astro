---
import Layout from "../layouts/Layout.astro";
import ProjectsCarousel from "../components/ProjectsCarousel.js";
---

<Layout>
    <main class="w-full">
        <section class="w-full py-24 bg-slate-50 px-6">
            <div class="max-w-4xl mx-auto text-center">
                <span class="text-brand-primary font-bold tracking-wider uppercase text-sm mb-2 block">
                    Research Area
                </span>
                <h1 class="text-4xl md:text-5xl font-bold text-brand-secondary mb-6">
                    Healthcare Systems
                </h1>
                <h2 class="text-xl text-slate-700 font-medium mb-8">
                    Innovating for better patient care and medical efficiency
                </h2>
                <p class="text-lg text-slate-600 leading-relaxed">
                    Our research in Healthcare Systems focuses on developing intelligent solutions 
                    to support decision-making in medical environments. We apply machine learning 
                    and software engineering principles to create tools that assist caregivers, 
                    improve diagnosis accuracy, and enhance the quality of life for patients 
                    with chronic conditions.
                </p>
            </div>
        </section>

        <ProjectsCarousel
            title="Related Projects" 
            filterTag="Healthcare" 
        />
    </main>
</Layout>