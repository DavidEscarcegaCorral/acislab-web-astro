---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const getYear = (pubDate: string): number | null => {
    const match = pubDate.match(/\d{4}/);
    return match ? Number(match[0]) : null;
};

const allPublications = (await getCollection("publications")).sort((a, b) => {
    const yearA = getYear(a.data.pubDate) ?? 0;
    const yearB = getYear(b.data.pubDate) ?? 0;
    return yearB - yearA;
});

const years = [
    ...new Set(
        allPublications
            .map((p) => getYear(p.data.pubDate))
            .filter((y): y is number => y !== null)
    ),
].sort((a, b) => b - a);
---

    <section class="w-full py-24 bg-white min-h-screen">
        <div class="max-w-4xl mx-auto px-6">
            <div class="text-center mb-16">
                <h1
                    class="text-4xl md:text-5xl font-bold text-brand-secondary mb-6"
                >
                    Publications
                </h1>
                <p
                    class="text-lg text-slate-600 max-w-2xl mx-auto leading-relaxed"
                >
                    Explore our latest research contributions, conference papers,
                    and academic articles regarding AI, Healthcare, and Software
                    Engineering.
                </p>
            </div>

            <div
                class="flex flex-wrap justify-center gap-4 mb-12"
                id="filter-container"
            >
                <button
                    class="filter-btn active px-6 py-2 rounded-full border border-brand-secondary text-brand-secondary font-medium transition-all hover:bg-brand-secondary hover:text-white"
                    data-year="all"
                >
                    All
                </button>
                {
                    years.map((year) => (
                        <button
                            class="filter-btn px-6 py-2 rounded-full border border-slate-300 text-slate-600 font-medium transition-all hover:border-brand-secondary hover:text-brand-secondary"
                            data-year={year}
                        >
                            {year}
                        </button>
                    ))
                }
            </div>

            <div class="space-y-6" id="publications-list">
                {
                    allPublications.length > 0 ? (
                        allPublications.map((pub) => (
                            <article
                                class="pub-card group relative bg-white border border-slate-200 p-8 rounded-xl hover:shadow-lg transition-all duration-300 hover:border-brand-primary/30"
                                data-year={getYear(pub.data.pubDate)} 
                            >
                                <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
                                    <div class="flex-1">
                                        <div class="flex items-center gap-3 text-sm text-slate-500 mb-3">
                                            <span class="bg-slate-100 text-slate-700 px-3 py-1 rounded-full font-semibold">
                                                {pub.data.pubDate}
                                            </span>
                                        </div>

                                        <h3 class="text-xl font-bold text-slate-900 group-hover:text-brand-secondary transition-colors mb-2">
                                            <a
                                                href={pub.data.url}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                            >
                                                {pub.data.title}
                                            </a>
                                        </h3>

                                        <p class="text-slate-800 font-medium mb-3 text-sm">
                                            {pub.data.authors}
                                        </p>

                                        <p class="text-slate-600 leading-relaxed text-sm">
                                            {pub.data.description}
                                        </p>
                                    </div>

                                    <div class="mt-4 md:mt-0 flex-shrink-0">
                                        <a
                                            href={pub.data.url}
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-slate-50 text-slate-400 group-hover:bg-brand-primary group-hover:text-white transition-all duration-300"
                                            aria-label="View publication"
                                        >
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                class="w-5 h-5"
                                                fill="none"
                                                viewBox="0 0 24 24"
                                                stroke="currentColor"
                                                stroke-width="2"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                                                />
                                            </svg>
                                        </a>
                                    </div>
                                </div>
                            </article>
                        ))
                    ) : (
                        <p class="text-center text-slate-500">
                            No publications found.
                        </p>
                    )
                }
            </div>

            <div id="no-results" class="hidden text-center py-12">
                <p class="text-slate-500 text-lg">
                    No publications found for this year.
                </p>
            </div>
        </div>
    </section>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const buttons = document.querySelectorAll(".filter-btn");
        const cards = document.querySelectorAll(".pub-card");
        const noResults = document.getElementById("no-results");

        const updateButtons = (selectedYear: string | null) => {
            buttons.forEach((btn) => {
                const isSelected =
                    btn.getAttribute("data-year") === selectedYear;
                if (isSelected) {
                    btn.classList.add(
                        "bg-brand-secondary",
                        "text-white",
                        "border-brand-secondary",
                    );
                    btn.classList.remove(
                        "text-slate-600",
                        "border-slate-300",
                        "hover:border-brand-secondary",
                        "hover:text-brand-secondary",
                    );
                } else {
                    btn.classList.remove(
                        "bg-brand-secondary",
                        "text-white",
                        "border-brand-secondary",
                    );
                    btn.classList.add(
                        "text-slate-600",
                        "border-slate-300",
                        "hover:border-brand-secondary",
                        "hover:text-brand-secondary",
                    );
                }
            });
        };

        buttons.forEach((btn) => {
            btn.addEventListener("click", () => {
                const year = btn.getAttribute("data-year");
                let visibleCount = 0;

                updateButtons(year);

                cards.forEach((card) => {
                    const cardYear = card.getAttribute("data-year");

                    if (year === "all" || cardYear === year) {
                        (card as HTMLElement).style.display = "block";
                        setTimeout(() => {
                            (card as HTMLElement).style.opacity = "1";
                            (card as HTMLElement).style.transform =
                                "translateY(0)";
                        }, 10);
                        visibleCount++;
                    } else {
                        (card as HTMLElement).style.display = "none";
                        (card as HTMLElement).style.opacity = "0";
                        (card as HTMLElement).style.transform =
                            "translateY(10px)";
                    }
                });

                if (noResults) {
                    noResults.classList.toggle("hidden", visibleCount > 0);
                }
            });
        });
    });
</script>

<style>
    .pub-card {
        transition:
            opacity 0.3s ease-out,
            transform 0.3s ease-out;
    }
</style>