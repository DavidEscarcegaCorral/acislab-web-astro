---

interface Props {
    name: string;
    role: string;
    image: string;
    bio: string;
}
const { name, role, image, bio} = Astro.props;
---
<div class="
    flex flex-col items-center text-center gap-4 p-6 bg-[#f0f0f0] rounded-lg
    w-full max-w-[300px] h-auto min-h-[350px] overflow-hidden

    md:flex-row md:items-start md:text-left md:max-w-[450px] md:min-h-[140px] md:gap-6

    origin-top transition-all duration-500 ease-in-out group
    md:origin-top-left
    hover:shadow-2xl hover:bg-white
    md:hover:max-w-[550px]
">
    <div class="w-24 h-24 shrink-0 overflow-hidden rounded-full border-2 border-white shadow-sm">
        <img src={image} alt={name} class="w-full h-full object-cover" />
    </div>

    <div class="flex flex-col w-full">
        <h3 class="text-xl font-bold text-slate-800 leading-tight">
            {name}
        </h3>
        <p class="text-sm text-slate-500 font-medium mb-1">
            {role}
        </p>

        <div class="grid grid-rows-[0fr] transition-all duration-500 group-hover:grid-rows-[1fr]">
            <div class="overflow-hidden">
                <p class="text-sm text-slate-600 leading-relaxed opacity-0 transition-opacity duration-300 group-hover:opacity-100 pt-3">
                    {bio}
                </p>
            </div>
        </div>
    </div>
</div>