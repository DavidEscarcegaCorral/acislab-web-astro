---
import ResearchAreaCard from "./ResearchAreaCard.astro";
import healthImage from '../assets/healthcare.png';
import affectiveImage from '../assets/affective.png';
---
<section class="max-w-7xl mx-auto px-6 gap-12">
    <div class="flex items-center gap-4">
        <h2 class="text-4xl font-bold text-brand-secondary tracking-tight">
            Our Research Areas
        </h2>
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
             stroke="currentColor"
             stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
             class="w-10 h-10 md:w-14 md:h-14 text-brand-secondary">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
            <path d="M12 12v.01"/>
            <path d="M19.071 4.929c-1.562 -1.562 -6 .337 -9.9 4.243c-3.905 3.905 -5.804 8.337 -4.242 9.9c1.562 1.561 6 -.338 9.9 -4.244c3.905 -3.905 5.804 -8.337 4.242 -9.9"/>
            <path d="M4.929 4.929c-1.562 1.562 .337 6 4.243 9.9c3.905 3.905 8.337 5.804 9.9 4.242c1.561 -1.562 -.338 -6 -4.244 -9.9c-3.905 -3.905 -8.337 -5.804 -9.9 -4.242"/>
        </svg>

    </div>
    <section class="grid grid-cols-1 md:grid-cols-2 gap-16 py-16 bg-white">
        <ResearchAreaCard
                title="Healthcare-Centered Systems"
                description="Design and application of intelligent systems to support healthcare processes, caregivers, and patients."
                image={healthImage}
                link="/research/healthcare"
        />
        <ResearchAreaCard
                title="Affective Computing & Intelligent Systems"
                description="Systems capable of understanding, modeling, and responding to human cognitive and emotional conditions."
                image={affectiveImage}
                link="/research/affective"
        />
    </section>
    
    <script>
        import Swiper from 'swiper';
        import {Navigation, Pagination} from 'swiper/modules';

        new Swiper('.mySwiper', {
            modules: [Navigation, Pagination],
            slidesPerView: 3,
            spaceBetween: 50,
            centeredSlides: true,
            loop: true,
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            breakpoints: {
                320: {slidesPerView: 1},
                768: {slidesPerView: 2},
                1024: {slidesPerView: 3}
            }
        });
    </script>

    <style>
        .swiper {
            overflow: hidden !important;
            padding-bottom: 150px !important;
            padding-top: 200px !important;
        }

        .swiper-slide {
            display: flex;
            justify-content: flex-start;
            transition: z-index 0.8s;
        }

        .swiper-slide:hover {
            z-index: 50;
        }
    </style>
</section>