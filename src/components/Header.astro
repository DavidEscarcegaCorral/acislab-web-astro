---
import ButtonGroup from "./ButtonGroup.astro";
import LinkButton from "./LinkButton.astro";
---

<header class="sticky top-0 z-50 bg-white/90 backdrop-blur border-b border-slate-200">
    <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        
        <a href="/" class="flex items-center gap-3">
            <div class="w-10 h-10 bg-slate-200 rounded-md"></div>
            <img src="../assets/logo_ACISLAB.png" alt="ACISLAB" class="h-10" />
        </a>


        <ButtonGroup>
            <div class="relative group">
                <LinkButton href="/Projects">
                    Our research
                </LinkButton>

                <div
                    class="absolute left-0 top-full mt-3 w-72
                        rounded-xl border border-slate-200 bg-white shadow-lg
                        opacity-0 invisible
                        translate-y-2 scale-95
                        transition-all duration-300 ease-out
                        group-hover:opacity-100 group-hover:visible
                        group-hover:translate-y-0 group-hover:scale-100"
                >
                    <ul class="py-2">
                        <li>
                            <a
                                href="/research/affective-computing"
                                class="block px-5 py-3 text-sm text-slate-700 hover:bg-slate-50 hover:text-acislab-blue"
                            >
                                <span class="font-semibold block">
                                    Affective Computing & Intelligent Systems
                                </span>
                            </a>
                        </li>
                        <li>
                            <a
                                href="/research/healthcare"
                                class="block px-5 py-3 text-sm text-slate-700 hover:bg-slate-50 hover:text-acislab-blue"
                            >
                                <span class="font-semibold block">
                                    Healthcare-Centered Systems
                                </span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <LinkButton href="/Publications">Theses and papers</LinkButton>
            <LinkButton href="/Members">Members</LinkButton>
            <LinkButton href="/Contact">Contact</LinkButton>
        </ButtonGroup>
    </div>
</header>